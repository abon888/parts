{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "build/",
    "paths": {
      "@MS/*": [ "src/*" ],
      "@MS_ROUTES/*": [ "src/routes/*" ]
    },
    "target": "es2017",
    "module": "commonjs",
    "allowJs": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "removeComments": false,
    "noImplicitAny": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}